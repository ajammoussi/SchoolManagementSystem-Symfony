<!-- Your Twig template -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Head content -->
</head>
<body>
<!-- Body content -->
<section class="content">
    <!-- Content section -->
    <div class="container">
        <!-- Container content -->
        <div class="row">
            <!-- Row content -->
            <div class="row title">
                <!-- Title content -->
            </div>

            <div class="container shadow-sm p-4 rounded applic-content">
                <!-- Application content -->
                <div class="card-container">
                    <ul class="list-group">
                        {% if pdfFiles|length == 0 %}
                            <h3 class='text-center'>No applications to show</h3>
                        {% else %}
                            {% for file in pdfFiles %}
                                {% if file != "." and file != ".." %}
                                    <!-- List item content -->
                                    <li class='list-group-item d-flex justify-content-evenly align-items-center' style='border: none; border-radius: 5px; margin-bottom: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: box-shadow 0.3s ease-in-out;'>
                                        <!-- List item content -->
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>
